<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">

    <welcome-file-list>
        <welcome-file>frameworks</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>FrameworkServlet</servlet-name>
        <servlet-class>cz.jbradle.poc.web.javax.servlet.FrameworkServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FrameworkServlet</servlet-name>
        <url-pattern>/frameworks</url-pattern>
    </servlet-mapping>
    <listener>
        <listener-class>
            cz.jbradle.poc.web.javax.servlet.InitEmbeddedDbServletContextListener
        </listener-class>
    </listener>

</web-app>
